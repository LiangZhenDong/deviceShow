  <ScrollView 
   xmlns:android="http://schemas.android.com/apk/res/android"
   xmlns:tools="http://schemas.android.com/tools" 
   android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    android:background="#ffffffff"
     >

   <RelativeLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >
    <include
        android:id="@+id/include1"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        layout="@layout/header" /> 
    <LinearLayout
        android:id="@+id/device"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/include1"
        android:orientation="vertical"
        android:paddingBottom="10dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:paddingTop="10dp" 
       >
<LinearLayout 
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_weight="3"
    android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >
            <Button
                android:id="@+id/bt1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_selector"
                android:text="设备型号:"
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text="  GXSW-ZY21"
                android:textSize="25sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_selector"
                android:text="安卓版本："
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="  4.4.2"
                android:textSize="25sp" />          
        </LinearLayout>
         
        
        
         <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/bt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bt_selector"
                android:text="获取IMEI号："
                android:textSize="25sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:id="@+id/tv" />      
        </LinearLayout>
        </LinearLayout>         
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/gray" /> 
              <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_selector"
            android:text="主要功能："
            android:textSize="25sp"
            android:textStyle="bold"
             />      
   <LinearLayout
    android:layout_width="fill_parent"
    android:layout_height="200dp"
    android:layout_weight="2"
    android:orientation="horizontal"
     >          
       <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:background="@drawable/bt_selector"
            android:text="充值业务"
            android:drawableTop="@drawable/pay"
            android:textSize="20sp" 
            android:id="@+id/bt_pay"
            />
          <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"     
            android:background="@drawable/bt_selector"
            android:drawableTop="@drawable/sim"
            android:text="开卡业务"
            android:textSize="20sp"
            android:id="@+id/bt_sim"
            android:layout_marginLeft="80dp" 
            />
            <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"     
            android:background="@drawable/bt_selector"
            android:drawableTop="@drawable/sim"
            android:text="读取卡片"
            android:textSize="20sp"
            android:id="@+id/bt_sim_rd"
            android:layout_marginLeft="80dp" />
 
   </LinearLayout> 
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="80dp"
            android:background="@drawable/bt_selector"
            android:drawableTop="@drawable/bankcard"
            android:text="刷卡支付"
            android:textSize="20sp"
            android:layout_marginTop="50dp"
            android:id="@+id/bt_bank"
            />      
        <TextView
          android:layout_width="fill_parent"
          android:layout_height="2dp"
          android:background="@color/gray" />        
   <LinearLayout 
         android:layout_width="fill_parent"
     android:layout_height="fill_parent"
     android:layout_weight="3"
       android:orientation="vertical"
      >
        
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bt_selector"
            android:text="关于我们："
            android:textSize="25sp"
            android:textStyle="bold" />
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="公司名称： 重庆博士顿科技有限公司"
            android:textSize="20sp" />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="公司地址：  重庆市渝北区新牌坊红锦大道518号君悦世纪A座14-4  "
            android:textSize="20sp" />
        
    <LinearLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         >            
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="公司网址： "
            android:textSize="20sp" />
         <Button
           android:id="@+id/bt"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="www.cqboston.cn"
           android:background="@drawable/bt_selector"
          android:textColor="@color/blue_gb"
             />    
         </LinearLayout>  
            <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="联系电话： 023-62766666 "
            android:textSize="20sp" />
    </LinearLayout>      
         </LinearLayout>     
</RelativeLayout>
</ScrollView>