<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <include layout="@layout/navbar" />
    <LinearLayout android:orientation="vertical" android:background="@drawable/mbopbg" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@+id/top_layout">
        <ScrollView android:id="@+id/scllowview_read_idcard" android:scrollbars="none" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="10.0dip" android:layout_marginBottom="10.0dip">
            <LinearLayout android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginLeft="5.0dip" android:layout_marginRight="5.0dip">
                <Button android:id="@+id/btn_get_idcard_photo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="开始识别(正面/反面)" />
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView style="@style/IDCardFieldTitle" android:gravity="right" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="姓名：" android:layout_weight="3.0" />
                    <EditText android:enabled="true" android:id="@+id/edit_name" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="姓名" android:layout_weight="1.0" />
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView style="@style/IDCardFieldTitle" android:gravity="right" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="身份证：" android:layout_weight="3.0" />
                    <EditText android:enabled="true" android:id="@+id/edit_id" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="身份证号码" android:layout_weight="1.0" />
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView style="@style/IDCardFieldTitle" android:gravity="right" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="性别：" android:layout_weight="3.0" />
                    <EditText android:enabled="true" android:id="@+id/edit_sex" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="性别" android:layout_weight="1.0" />
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView style="@style/IDCardFieldTitle" android:gravity="right" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="出生年月：" android:layout_weight="3.0" />
                    <EditText android:enabled="true" android:id="@+id/edit_date" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="出生年月" android:layout_weight="1.0" />
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView style="@style/IDCardFieldTitle" android:gravity="right" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="民族：" android:layout_weight="3.0" />
                    <EditText android:enabled="true" android:id="@+id/edit_type" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="民族" android:layout_weight="1.0" />
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView style="@style/IDCardFieldTitle" android:gravity="right" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="住址：" android:layout_weight="3.0" />
                    <EditText android:enabled="true" android:id="@+id/edit_address" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="住址" android:layout_weight="1.0" />
                </LinearLayout>
                <LinearLayout style="@style/IDCardFieldTitle" android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_create" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView style="@style/IDCardFieldTitle" android:gravity="right" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="签发机关：" android:layout_weight="3.0" />
                    <EditText android:enabled="true" android:id="@+id/edit_create" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="签发机关" android:layout_weight="1.0" />
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_limit_date_start" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView style="@style/IDCardFieldTitle" android:gravity="right" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="有效日期\n(开始)：" android:layout_weight="3.0" />
                    <EditText android:enabled="true" android:id="@+id/edit_limit_date_start" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="有效日期(开始)" android:layout_weight="1.0" />
                </LinearLayout>
                <LinearLayout android:gravity="center_vertical" android:orientation="horizontal" android:id="@+id/layout_limit_date_end" android:layout_width="fill_parent" android:layout_height="wrap_content">
                    <TextView style="@style/IDCardFieldTitle" android:gravity="right" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="有效日期\n(结束)：" android:layout_weight="3.0" />
                    <EditText android:enabled="true" android:id="@+id/edit_limit_date_end" android:layout_width="fill_parent" android:layout_height="wrap_content" android:hint="有效日期(结束)" android:layout_weight="1.0" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>